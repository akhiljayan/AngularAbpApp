@using Pulsesync.IngoTPCC.Localization
<div ng-controller="common.views.teams.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-6">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>@L("Teams")</span> <small>@L("TeamsHeaderInfo")</small>
                    </h1>
                </div>
            </div>
        </div>
        <div class="col-xs-6 text-right">
            <button ng-if="vm.permissions.manageTeams" class="btn btn-primary blue" ng-click="vm.createTeam()">@L("CreateNewTeam")</button>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="portlet light">
                <div class="portlet-body">
                    <div ui-grid="vm.teamsGridOptions" ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>
                </div>
            </div>
        </div>
    </div>
</div>
