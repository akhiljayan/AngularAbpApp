@using Pulsesync.IngoTPCC.Localization
<style type="text/css">
    .ui-grid-cell, .ui-grid-row {
        height: auto !important;
    }
    .header-padding {
        padding:5px;
    }
    .header-detail {
        font-size: 15px !important;
    }
</style>
<div class="portlet light" data-drag="true">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject">{{vm.title}}</span><br />
            <span class="header-detail">{{vm.detail}}</span>
        </div>
        <div class="tools pull-right">
            <a class="remove" ng-click="vm.cancel()"></a>
        </div>
    </div>
    <div class="portlet-body modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6" style="margin-left: -30px;">{{vm.stateName}} by {{vm.auditLog.createdBy}}</div>
                <div class="col-md-6">{{vm.stateName}} on {{vm.auditLog.createdDate | dateTimeFormat}}</div>
            </div>
            <div class="col-md-12" style="height:20px">&nbsp;</div>
            <div class="row">
                <div class="col-md-12">
                    <div busy-if="vm.loading">
                        <div ui-grid="vm.gridOptions" ui-grid-pagination dir=@(CultureHelper.IsRtl ? "rtl" : "")>
                            <div class="ui-grid-nodata-watermark" ng-show="!vm.gridOptions.data.length">No data available</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="pull-right">
                        <ul uib-pagination
                            class="pagination-sm"
                            total-items="vm.totalItems"
                            items-per-page="vm.pageSize" 
                            previous-text="&lsaquo;"
                            next-text="&rsaquo;"
                            boundary-link-numbers="true"
                            max-size="3"
                            ng-model="vm.currentPage" 
                            ng-change="vm.pageChanged()"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>