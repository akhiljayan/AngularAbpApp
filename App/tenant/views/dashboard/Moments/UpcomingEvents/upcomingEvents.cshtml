<div id="UpComingEvents" class="portlet light tasks-widget person-care-list" busy-if="vm.loading">
    <div class="portlet-title margin-bottom-0  main-title">
        <div class="caption">
            <span class="caption-subject">@L("UpcomingEvents") - Person</span><br />
        </div>
        <div class="actions dropdown inputs">
            <div class="input-small-new inline-block">
                <form action="" class="search-form search-style-class med-apoinment">
                    <div class="form-group has-feedback input-inline search-form-group">
                        <label for="search" class="sr-only">@L("Search")</label>
                        <input type="text" ng-model="vm.filter" enter-key="vm.loadResults()" class="form-control form-control-solid search-input input-circle font-13-main clearable med-apoinment" placeholder="search keywords...">
                        <a class="form-control-feedback search-close searchIcon-close fa fa-times" ng-click="vm.clearFilter()"></a>
                        <i class="material-icons form-control-feedback searchIcon">@L("search")</i>
                    </div>
                </form>
            </div>
            @*<ul class="dropdown-menu pull-right">
                <li>
                    <a href="javascript:;" class="bold" ng-click="vm.getAll()">All</a>
                </li>
                <li class="divider"> </li>
                <li ng-repeat="cntr in vm.centrelist">
