                </li>
            </ul>*@
        </div>
    </div>
    <div class="portlet-body person-care-portlet-body">
        <div class="mt-comments" ng-if="vm.events.length">
            <div class="mt-comment person-care-aircrd" ng-repeat="event in vm.events" ng-click="vm.viewEvent(event.id)" style="cursor:pointer">
                <div class="row person-care-content">
                    <div class="col-xs-2 col-sm-2 nopadding-left">
                        <img class="img-responsive" ng-src="{{ vm.appPath }}File/GetPictureById?pictureName={{ event.pictureId }}&t=Clock.Now.Ticks.ToString()" style="border: 1px solid #e9e9e9"/>
                    </div>
                    <div class="col-xs-10 col-sm-10" style="padding-left: 0px">
                        <div class="col-md-12 nopadding">
                            <span class="bold">{{event.activityEvent.description}}</span>
                        </div>
                        <div class="col-md-12" style="padding:10px 0px 0px 0px">
                            <div class="col-md-12 nopadding">
                                <span>{{event.eventTime | date :"dd-MMM-yyyy"}}<span class="dot">•</span>{{event.eventTime | date :"EEE hh:mm a"}}</span>
                            </div>
                            <div class="col-md-12 nopadding">
                                <span>{{event.eventVenue}}</span>
                            </div>
                            <div class="col-md-12 nopadding">
                                <span>Centre : {{event.centre.name}}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="ps-hr-full" />
            </div>
        </div>

        <simple-paginator data="vm.data" key="vm.key" on-page-changed="vm.loadResults(requestParams)" page-size="vm.pageSize"></simple-paginator>


