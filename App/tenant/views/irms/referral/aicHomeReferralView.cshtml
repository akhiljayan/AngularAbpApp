                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isAwarePrognosis }}</div>
                                <label class="control-label view-label" for="isAwarePrognosis">@L("PatientAwarePrognosis")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isFamilyAwarePrognosis }}</div>
                                <label class="control-label view-label" for="isFamilyAwarePrognosis">@L("PatientFamilyAwarePrognosis")</label>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Remarks Section -->
            <div id="Remarks" class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject">@L("Remarks")</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.addendumRemarks }}</div>
                                <label class="control-label view-label" for="addendumRemarks">@L("Remarks")</label>
                            </div>

                        </div>
