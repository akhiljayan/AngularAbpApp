                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.diagnosis }}</div>
                                <label class="control-label view-label" for="diagnosis">@L("PatientDiagnosis")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.presentCondition }}</div>
                                <label class="control-label view-label" for="presentCondition">@L("PatientPresentCondition")</label>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isAwareDiagnosis }}</div>
                                <label class="control-label view-label" for="isAwareDiagnosis">@L("PatientAwareDiagnosis")</label>
                            </div>

                            <div class="form-group form-md-line-input">
