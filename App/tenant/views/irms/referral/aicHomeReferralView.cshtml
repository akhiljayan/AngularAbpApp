@model ReferralDto
@using IRMS.Entities.Dto;
<div ng-controller="tenant.views.irms.aicHomeReferralView as aicHomeReferral">

    <div class="col-md-12 col-sm-12 col-xs-12">
        <div busy-if="vm.loading">
            <!-- Heart Failure Condition Section -->
            <div id="HeartFailureCondition" class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject">@L("HeartFailureCondition")</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isHeartFailure }}</div>
                                <label class="control-label view-label" for="isHeartFailure">@L("HeartFailureConditionQ1")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isHeartFailureNYHA }}</div>
                                <label class="control-label view-label" for="isHeartFailureNYHA">@L("HeartFailureConditionQ2")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isHeartFailureOthers }}</div>
                                <label class="control-label view-label" for="isHeartFailureOthers">@L("HeartFailureConditionQ3")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.heartFailureReasonList.heartFailureReason }}</div>
                                <label class="control-label view-label" for="heartFailureReason">@L("HeartFailureReason")</label>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Respiratory Failure Condition Section -->
            <div id="RespiratoryFailureCondition" class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject">@L("RespiratoryFailureCondition")</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isRespiratory }}</div>
                                <label class="control-label view-label" for="isRespiratory">@L("RespiratoryFailureConditionQ1")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isRespiratoryDyspnoea }}</div>
                                <label class="control-label view-label" for="isRespiratoryDyspnoea">@L("RespiratoryFailureConditionQ2")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isRespiratoryRepeated }}</div>
                                <label class="control-label view-label" for="isRespiratoryRepeated">@L("RespiratoryFailureConditionQ3")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isRespiratoryHypoxaemia }}</div>
                                <label class="control-label view-label" for="isRespiratoryHypoxaemia">@L("RespiratoryFailureConditionQ4")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isRespiratoryCOPD }}</div>
                                <label class="control-label view-label" for="isRespiratoryCOPD">@L("RespiratoryFailureConditionQ5")</label>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Renal Failure Condition Section -->
            <div id="RenalFailureCondition" class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject">@L("RenalFailureCondition")</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isRenalFailure }}</div>
                                <label class="control-label view-label" for="isRenalFailure">@L("RenalFailureConditionQ1")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isRenalGFR }}</div>
                                <label class="control-label view-label" for="isRenalGFR">@L("RenalFailureConditionQ2")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isRenalDialysisReason }}</div>
                                <label class="control-label view-label" for="isRenalDialysisReason">@L("RenalFailureConditionQ3")</label>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Liver Failure Conditionn Section -->
