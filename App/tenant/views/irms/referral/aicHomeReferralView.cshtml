                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isLiverOthers }}</div>
                                <label class="control-label view-label" for="isLiverOthers">@L("LiverFailureConditionQ4")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.liverFailureReasonList.liverFailureReason }}</div>
                                <label class="control-label view-label" for="liverFailureReason">@L("LiverFailureReason")</label>
