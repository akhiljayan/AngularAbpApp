                    <div class="caption">
                        <span class="caption-subject">@L("LiverFailureCondition")</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isLiverFailure }}</div>
                                <label class="control-label view-label" for="isLiverFailure">@L("LiverFailureConditionQ1")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isLiverINR }}</div>
                                <label class="control-label view-label" for="isLiverINR">@L("LiverFailureConditionQ2")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ aicHomeReferral.aicHomeReferralList.isLiverSerum }}</div>
                                <label class="control-label view-label" for="isLiverSerum">@L("LiverFailureConditionQ3")</label>
