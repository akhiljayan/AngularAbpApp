                                <label class="control-label view-label" for="precautionRequired">@L("PrecautionRequired")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ health.hitPrecautionRequiredList.precautionRequiredOthersSpecify }}</div>
                                <label class="control-label view-label" for="precautionRequiredOthersSpecify">@L("OtherPrecautionRequired")</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>