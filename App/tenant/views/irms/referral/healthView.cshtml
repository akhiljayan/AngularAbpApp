                                <label class="control-label view-label" for="infectiousDiseasesOtherSpecify">@L("OtherInfectiousDiseaseSpecified")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ health.hitInfectiousDisease2List.mrsa }}</div>
                                <label class="control-label view-label" for="mrsa">@L("MRSA")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ health.hitInfectiousDisease2List.vre }}</div>
                                <label class="control-label view-label" for="vre">@L("VRE")</label>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="form-control remove-border auto-height view-text">{{ health.hitInfectiousDisease2List.ptb }}</div>
                                <label class="control-label view-label" for="ptb">@L("PTB")</label>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Precaution Required Section -->
            <div id="HealthPrecautionRequired" class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
