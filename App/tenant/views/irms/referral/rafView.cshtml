                                    <label class="control-label view-label" for="treatmentSpecialProceduresMins">@L("TreatmentSpecialProceduresMins")</label>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group form-md-line-input">
                                    <div class="form-control remove-border auto-height view-text">{{ raf.rafList.message }}</div>
                                    <label class="control-label view-label" for="message">@L("Message")</label>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
