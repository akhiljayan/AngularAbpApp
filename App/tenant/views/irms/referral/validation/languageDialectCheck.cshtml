<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject">@L("IRMSReferral")</span>
        </div>
        <div class="tools pull-right">
            <a class="remove" ng-click="vm.cancel()"></a>
        </div>
    </div>
    <div class="portlet-body form">
        <form role="form" name="inputForm" novalidate action="#" class="form-validation horizontal-form">
            <div class="form-body">
                <div class="row">
                    <div class="col-md-12">
                        <label>@L("ConversionDuplicateCheckMessage", "Language and Dialect")</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group form-md-checkboxes">
                            <div class="md-checkbox-list">

                                <div class="md-checkbox">
                                    <input id="languageDialect" type="checkbox" class="form-control" ng-model="vm.languageDialect" />
                                    <label for="languageDialect">
                                        <span class="inc"></span>
                                        <span class="check"></span>
                                        <span class="box"></span>
                                        @L("LanguageDialect")
                                    </label>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions noborder right">
                <button type="button" button-busy="vm.saving" class="btn btn-circle light-grey-pcc btn-outline btn-small" ng-click="vm.proceed()" ng-disabled="vm.saving"><i class="material-icons ps-btn-material">check</i>@L("Proceed")</button>
                <button type="button" button-busy="vm.saving" class="btn btn-circle light-grey-pcc btn-outline btn-small" ng-click="vm.cancel()" ng-disabled="vm.saving"><i class="material-icons ps-btn-material">clear</i>@L("Cancel")</button>
            </div>
        </form>
    </div>
</div>
