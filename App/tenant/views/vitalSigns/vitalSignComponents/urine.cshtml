@model VitalSignDto
@using Pulsesync.IngoTPCC.Application.VitalSign.Dto;
@{
    var attributes = new Dictionary<string, object>();
    attributes.Add("role", "form");
    attributes.Add("id", "urineVitalSignsForm");
    attributes.Add("name", "urineVitalSignsForm");
    attributes.Add("novalidate", "");
    attributes.Add("action", "#");
    attributes.Add("angular-validator-submit", "$ctrl.parentScope.save($ctrl.vitalSign)");
    attributes.Add("angular-validator", "");
    attributes.Add("error-focus", "");
}
@using (var f = Html.BeginForm(htmlAttributes: new HtmlAttributes(attributes).AddClass("horizontal-form scrollable-form-body")))
{
    using (var s = f.BeginSection())
    {
        <div id="Vitalsigns" class="portlet light" style="padding-bottom:0px;padding-top:0px">
            <div class="portlet-body" style="padding-top:2px">
                <div class="row">
                    <h5 class="fontStealGreen bold col-md-12">Urine</h5>
                    <div class="col-md-4">
                        @s.FieldFor(m => m.Urine.Blood).Attrs(new { ng_model = "$ctrl.vitalSign.urine.blood" })
                    </div>
                    <div class="col-md-4">
                        @s.FieldFor(m => m.Urine.PH).Attrs(new { ng_model = "$ctrl.vitalSign.urine.ph", type = "number", ng_pattern = @"/^[0-9]+(\.[0-9]{1,2})?$/", ng_keydown = "$ctrl.parentScope.preventUnwantedChars($event)" })
                    </div>
                    <div class="col-md-4">
                        @s.FieldFor(m => m.Urine.Ketone).Attrs(new { ng_model = "$ctrl.vitalSign.urine.ketone" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        @s.FieldFor(m => m.Urine.Glucose).Attrs(new { ng_model = "$ctrl.vitalSign.urine.glucose" })
                    </div>
                    <div class="col-md-4">
                        @s.FieldFor(m => m.Urine.Luekocytes).AsDropDown().Attrs(new { ng_model = "$ctrl.vitalSign.urine.luekocytes", name = "urineLuekocytes", repeat = "$ctrl.parentScope.luekocytesValue" })
                    </div>
                    <div class="col-md-4">
                        @s.FieldFor(m => m.Urine.Nitrite).AsDropDown().Attrs(new { ng_model = "$ctrl.vitalSign.urine.nitrite", name = "urineNitrite", repeat = "$ctrl.parentScope.nitriteValue" })
                    </div>
                </div>
            </div>
        </div>
    }
}


