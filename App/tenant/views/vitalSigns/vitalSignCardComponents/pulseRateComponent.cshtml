<div class="col-md-12 col-sm-12" style="padding-bottom:10px">
    <div class="row">
        <div class="col-md-12 col-sm-12"><span class="bold">Pulse Rate</span></div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12" ng-if="$ctrl.forPerson">
            <small class="bold" ng-class="{'abnormal' : $ctrl.vitalsign.pulseRate.category != '0' }">{{$ctrl.vitalsign.pulseRate.values[0].value ? $ctrl.vitalsign.pulseRate.values[0].value : '-'}} <span ng-if="$ctrl.vitalsign.pulseRate.values[0].value">/min</span></small>&nbsp;
            <small ng-if="$ctrl.vitalsign.pulseRate.delta == '1' && !$ctrl.vitalsign.pulseRate.normalChange"><i class="fa fa-arrow-up" aria-hidden="true" ng-class="{'abnormal' : !$ctrl.vitalsign.pulseRate.abruptChange }"></i></small>
            <small ng-if="$ctrl.vitalsign.pulseRate.delta == '-1' && !$ctrl.vitalsign.pulseRate.normalChange"><i class="fa fa-arrow-down" aria-hidden="true" ng-class="{'abnormal' : !$ctrl.vitalsign.pulseRate.abruptChange }"></i></small>
        </div>
        <div class="col-md-12 col-sm-12" ng-if="!$ctrl.forPerson">
            <small class="bold" ng-class="{'abnormal' : $ctrl.vitalsign.pulseRate.category != '0' }">{{$ctrl.vitalsign.pulseRate.values[0].value ? $ctrl.vitalsign.pulseRate.values[0].value : '-'}} <span ng-if="$ctrl.vitalsign.pulseRate.values[0].value">/min</span></small>&nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12"><small>{{$ctrl.vitalsign.pulseRate.values[0].takenOn | dateTimeFormat}}</small></div>
    </div>
</div>