                        <div class="row">
                            <div class="col-md-12 col-sm-12" style="padding:0px"><small>{{$ctrl.vitalsign.weight.values[0].takenOn | dateTimeFormat}}</small></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>