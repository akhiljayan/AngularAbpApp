@using Pulsesync.IngoTPCC.Authorization

<div class="row margin-bottom-5">
    <div class="col-xs-12">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("CentrePersonGroup")</span>
                </h1>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <form action="#" angular-validator="" angular-validator-submit="vm.saveCentrePersonGroup()" dirty-check="" method="post" name="vm.form" novalidate="">
        <div class="col-lg-12">
            <div busy-if="vm.loading">
                <centre-person-group-detail-general-card id="General" mode="vm.mode" model="vm.model"></centre-person-group-detail-general-card>
            </div>
        </div>
        <div class="col-lg-12">
            <div ng-if="vm.mode!='new'">
                <centre-person-group-detail-personlist id="General" mode="vm.mode" model="vm.model"></centre-person-group-detail-personlist>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-actions margin-top-10 noborder pull-right">
                <button type="submit"
                        class="btn btn-circle light-grey-pcc btn-outline btn-small"
                        ng-disabled="!vm.permissions.edit">
                    <i class="material-icons ps-btn-material">check</i>Save
                </button>

                @if (IsGranted(AppPermissions.Pages_Tenant_CentrePersonGroups_Delete))
                {
                    <button type="button"
                            class="btn btn-circle light-grey-pcc btn-outline btn-small"
                            ng-if="vm.mode!='new'"
                            ng-click="vm.deleteCentrePersonGroup()">
                        <i class="material-icons ps-btn-material">delete_forever</i>Delete
                    </button>
                }

                <button type="button"
                        class="btn btn-circle light-grey-pcc btn-outline btn-small"
                        ng-click="vm.cancel()">
                    <i class="material-icons ps-btn-material">clear</i>Cancel
                </button>
            </div>
        </div>
    </form>
</div>