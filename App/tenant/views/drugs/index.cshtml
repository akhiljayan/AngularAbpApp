@using Pulsesync.IngoTPCC.Localization

<style>
    .ui-grid-cell, .ui-grid-row {
        height: auto !important;
    }

    .icon-wrapper.disabled, .icon-wrapper[disabled] {
        cursor: not-allowed;
        opacity: .65;
        filter: alpha(opacity=65);
        -webkit-box-shadow: none;
        box-shadow: none;
    }
</style>
<div class="view-content" ng-controller="tenant.views.drugs.index as vm">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject">@L("Drugs")</span>
                    </div>
                    <div class="actions dropdown inputs">
                        <div class="input-small-new inline-block">
                            <form action="" class="search-form">
                                <div class="form-group has-feedback input-inline">
                                    <label for="search" class="sr-only">@L("Search")</label>
                                    <input type="text"
                                           class="form-control form-control-solid input-circle search-input font-13-main clearable"
                                           placeholder="search keywords..."
                                           enter-key="vm.getDrugs()"
                                           ng-model="vm.filterText">
                                    <a class="form-control-feedback search-close searchIcon-close fa fa-times"
                                       ng-click="vm.clearFilter()"></a>
                                    <i class="material-icons form-control-feedback searchIcon">@L("search")</i>
                                </div>
                            </form>
                        </div>
                        <a ng-click="vm.activateSelectedDrug()" title="Activate" class="icon-wrapper" ng-if="vm.permissions.activate" ng-disabled="!vm.activateFilter">
                            <span class="ps-icon-1x ps-icon-activate custom-icon grey"></span>
                        </a>
                        <a ng-click="vm.deactivateSelectedDrug()" title="Deactivate" class="icon-wrapper" ng-if="vm.permissions.deactivate" ng-disabled="!vm.deactivateFilter">
                            <span class="ps-icon-1x ps-icon-deactivate custom-icon grey"></span>
                        </a>
                        <a ng-click="vm.createDrug()" title="Add" class="icon-wrapper" ng-if="vm.permissions.create">
                            <i class="material-icons custom-icon"><span class="fa fa-plus"></span></i>
                        </a>
                        <a ng-click="vm.deleteSelectedDrug()" title="Delete" class="icon-wrapper" ng-if="vm.permissions.delete">
                            <i class="material-icons custom-icon">delete</i>
                        </a>
                    </div>
                </div>

                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div busy-if="vm.loading">
                                <div ui-grid="vm.gridOptions" ui-grid-selection ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <simple-paginator data="vm.data" on-page-changed="vm.loadData(requestParams)"></simple-paginator>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>