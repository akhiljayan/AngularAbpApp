@model CreateOrUpdatePersonInput

@using Pulsesync.IngoTPCC.Application.Person.Dto;

<div id="Social" class="portlet light" ng-controller="tenant.views.person.socialView as social">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject">@L("Social")</span>
        </div>
        <div class="actions dropdown inputs">
            <a class="icon-wrapper" ng-if="social.mode.toLowerCase()=='view' && !vm.isNew && vm.permissions.edit" ng-click="social.edit()">
                <i class="material-icons custom-icon">edit</i>
            </a>
        </div>
        <div class="tools">
            <a class="remove" ng-if="social.mode.toLowerCase()=='edit' && !vm.isNew" ng-click="social.close()"></a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <div ng-switch="social.mode">
                @*edit mode*@
                <div ng-switch-when="edit">
                    <div class="col-md-12">
                        @using (var f = Html.BeginForm())
                        {
                            using (var s = f.BeginSection())
                            {
                                @s.FieldFor(m => m.AboutMe).Attrs(new { ng_model = "social.person.aboutMe" }).AddClass("animate msd-elastic: \\n;").Rows(4)
                                @s.FieldFor(m => m.Goals).Attrs(new { ng_model = "social.person.goals" }).Rows(4).AddClass("animate msd-elastic: \\n;")
                                @s.FieldFor(m => m.Personality).Attrs(new { ng_model = "social.person.personality" }).AddClass("animate msd-elastic: \\n;")
                                @s.FieldFor(m => m.Likes).Attrs(new { ng_model = "social.person.likes" }).AddClass("animate msd-elastic: \\n;")
                                @s.FieldFor(m => m.Dislikes).Attrs(new { ng_model = "social.person.dislikes" }).AddClass("animate msd-elastic: \\n;")
                                @s.FieldFor(m => m.WhatMakesHimOrHerHappy).Attrs(new { ng_model = "social.person.whatMakesHimOrHerHappy" }).AddClass("animate msd-elastic: \\n;").Rows(4)
                                @s.FieldFor(m => m.Hobbies).Attrs(new { ng_model = "social.person.hobbies" }).AddClass("animate msd-elastic: \\n;")

                                <div class="form-actions pull-right" ng-if="!vm.isNew">
                                    <a class="linkButton btn-small" ng-click="social.save()">
                                        <i class="material-icons  font-18-main v-top">save</i> @L("Save")
                                    </a>
                                    <a class="linkButton btn-small" ng-click="social.close()">
                                        <i class="material-icons  font-18-main v-top">close</i> @L("Cancel")
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>

                @*view mode*@
                <div ng-switch-default>
                    <div class="col-md-12">
                        <div class="form-group form-md-line-input margin-bottom-20">
                            <div class="form-control remove-border auto-height" style="white-space: pre-wrap;"><ng-blank ng-model="vm.person.aboutMe" /></div>
                            <label class="control-label">@L("AboutMe")</label>
                        </div>
                        <div class="form-group form-md-line-input margin-bottom-20">
                            <div class="form-control remove-border auto-height" style="white-space: pre-wrap;"><ng-blank ng-model="vm.person.goals" /></div>
                            <label class="control-label">@L("Goals")</label>
                        </div>
                        <div class="form-group form-md-line-input margin-bottom-20">
                            <div class="form-control remove-border auto-height" style="white-space: pre-wrap;"><ng-blank ng-model="vm.person.personality" /></div>
                            <label class="control-label">@L("Personality")</label>
                        </div>
                        <div class="form-group form-md-line-input margin-bottom-20">
                            <div class="form-control remove-border auto-height" style="white-space: pre-wrap;"><ng-blank ng-model="vm.person.likes" /></div>
                            <label class="control-label">@L("Likes")</label>
                        </div>
                        <div class="form-group form-md-line-input margin-bottom-20">
                            <div class="form-control remove-border auto-height" style="white-space: pre-wrap;"><ng-blank ng-model="vm.person.dislikes" /></div>
                            <label class="control-label">@L("Dislikes")</label>
                        </div>
                        <div class="form-group form-md-line-input margin-bottom-20">
                            <div class="form-control remove-border auto-height" style="white-space: pre-wrap;"><ng-blank ng-model="vm.person.whatMakesHimOrHerHappy" /></div>
                            <label class="control-label">@L("WhatMakesHimOrHerHappy")</label>
                        </div>
                        <div class="form-group form-md-line-input margin-bottom-20">
                            <div class="form-control remove-border auto-height" style="white-space: pre-wrap;"><ng-blank ng-model="vm.person.hobbies" /></div>
                            <label class="control-label">@L("Hobbies")</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>