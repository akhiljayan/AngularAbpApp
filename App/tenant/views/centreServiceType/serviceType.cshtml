@using Pulsesync.IngoTPCC.Localization
<div class="view-content" ng-controller="tenant.views.centreServiceType.serviceType as vm">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject">@L("ServiceType")</span>
                    </div>
                    <div class="actions dropdown inputs">
                        <a class="icon-wrapper" ng-click="vm.activate()" title="Activate" ng-disabled="!vm.permissions.activate || !vm.activateFilter">
                            <span class="ps-icon-1x ps-icon-activate ps-icon-standard custom-icon"></span>
                        </a>
                        <a class="icon-wrapper" ng-click="vm.deactivate()" title="Deactivate" ng-disabled="!vm.permissions.deactivate || !vm.deactivateFilter">
                            <span class="ps-icon-1x ps-icon-deactivate ps-icon-standard custom-icon"></span>
                        </a>
                        <a class="icon-wrapper" ng-click="vm.create()" title="Add a Service type">
                            <i class="material-icons custom-icon"><span class="fa fa-plus"></span></i>
                        </a>
                        <a class="icon-wrapper" ng-click="vm.delete()" title="Delete" ng-disabled="!vm.permissions.delete">
                            <i class="material-icons custom-icon">delete</i>
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div busy-if="vm.loading">
                                <div ui-grid="vm.gridOptions" ui-grid-selection ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <simple-paginator data="vm.data" on-page-changed="vm.loadData(requestParams)"></simple-paginator>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
