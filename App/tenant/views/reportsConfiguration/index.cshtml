<div id="ReportsConfigIndex" class="view-content" ng-controller="tenant.views.reportsConfiguration.index as vm">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="portlet light" busy-if="vm.loading">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject">@L("ReportsConfiguration"){{$ctrl.headingAppend}}</span>
                    </div>
                    <div class="actions dropdown inputs">
                        <a ng-click="vm.create()" ng-if="vm.permissions.create" title="Add a new report" class="icon-wrapper">
                            <i class="material-icons custom-icon"><span class="fa fa-plus"></span></i>
                        </a>
                        <a class="icon-wrapper" href="javascript:;" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                            <i class="material-icons custom-icon">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a href="javascript:;" class="bold" ng-click="vm.loadResults(requestParams, true)">@L("Active")</a>
                            </li>
                            <li class="divider"> </li>
                            <li>
                                <a href="javascript:;" class="bold" ng-click="vm.loadResults(requestParams, false)">@L("Inactive")</a>
                            </li>
                        </ul>
                    </div>                    
                </div>
                <div class="portlet-body air-card p-0-top-bottom">
                    <div class="row margin-bottom-10 cursor-pointer" ng-repeat="report in vm.reportList">
                        <div class="col-md-12" ng-click="vm.edit(report.id)">
                            <span class="otherText bold">{{report.description}}</span>
                        </div>
                    </div>
                </div>
                <simple-paginator data="vm.data" key="vm.key" on-page-changed="vm.loadResults(requestParams, true)"></simple-paginator>
            </div>
        </div>
    </div>
</div>