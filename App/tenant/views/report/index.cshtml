<div id="ReportIndex" class="view-content" ng-controller="tenant.views.report.index as vm">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="portlet light" busy-if="vm.loading">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject">@L("Report")</span>
                    </div>
                </div>
                <div class="portlet-body air-card p-0-top-bottom">
                    <div class="row margin-bottom-10 cursor-pointer" ng-repeat="report in vm.reportList">
                        <div class="col-md-12">
                            <a href="" ng-click="vm.openReport(report)">{{report.description}}</a>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>